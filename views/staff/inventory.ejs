<%- include('../partials/staffSidebar', { activePage: 'inventory' }) %>

<main class="flex-1 ml-64">
  <!-- Top Bar -->
  <header class="h-16 border-b border-primary/10 bg-white dark:bg-slate-900 px-8 flex items-center justify-between sticky top-0 z-10">
    <div>
      <h2 class="text-xl font-bold">Inventory</h2>
    </div>
  </header>
  <div class="p-8">
    <!-- Inventory List -->
    <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-slate-50 dark:bg-slate-800/50 border-b border-slate-200 dark:border-slate-800">
            <tr>
              <th class="text-left px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">Item</th>
              <th class="text-left px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">Category</th>
              <th class="text-right px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">Quantity</th>
              <th class="text-right px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">Reorder Level</th>
              <th class="text-center px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">Status</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 dark:divide-slate-800">
            <% if (items && items.length > 0) { %>
              <% items.forEach(function(item) { %>
                <% const isLowStock = item.quantityOnHand <= item.reorderLevel; %>
                <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50">
                  <td class="px-6 py-4">
                    <p class="font-bold text-slate-900 dark:text-white"><%= item.name %></p>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400">
                      <%= item.category || 'Uncategorized' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <p class="font-bold <%= isLowStock ? 'text-amber-600' : 'text-slate-900 dark:text-white' %>">
                      <%= item.quantityOnHand %> <%= item.unit || '' %>
                    </p>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <p class="text-slate-500"><%= item.reorderLevel %> <%= item.unit || '' %></p>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <% if (isLowStock) { %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400">
                        Low Stock
                      </span>
                    <% } else { %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400">
                        In Stock
                      </span>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="5" class="px-6 py-12 text-center text-slate-500">
                  No inventory items found.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
</div>
