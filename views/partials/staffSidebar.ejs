<aside class="w-64 border-r border-slate-200 dark:border-slate-800 bg-white dark:bg-slate-900 flex flex-col">
  <div class="p-6 flex items-center gap-3">
    <div class="size-10 bg-primary rounded-lg flex items-center justify-center text-white">
      <span class="material-symbols-outlined">sync_alt</span>
    </div>
    <div>
      <h1 class="font-bold text-lg tracking-tight">FlowSync</h1>
      <p class="text-xs text-slate-500 font-medium">Staff Portal</p>
    </div>
  </div>
  <nav class="flex-1 px-4 py-4 space-y-1">
    <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg <%= activePage === 'dashboard' ? 'bg-primary/10 text-primary font-semibold' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors' %>" href="/staff/dashboard">
      <span class="material-symbols-outlined">dashboard</span>
      Dashboard
    </a>
    <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg <%= activePage === 'tasks' ? 'bg-primary/10 text-primary font-semibold' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors' %>" href="/checklists/daily">
      <span class="material-symbols-outlined">assignment</span>
      My Tasks
    </a>
    <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg <%= activePage === 'profile' ? 'bg-primary/10 text-primary font-semibold' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors' %>" href="/staff/profile">
      <span class="material-symbols-outlined">person</span>
      Profile
    </a>
  </nav>
  <div class="p-4 border-t border-slate-200 dark:border-slate-800">
    <a href="/staff/profile" class="flex items-center gap-3 p-2 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-lg transition-colors">
      <div class="size-10 rounded-full bg-slate-200 flex items-center justify-center">
        <span class="material-symbols-outlined text-slate-500">person</span>
      </div>
      <div class="flex-1 overflow-hidden">
        <p class="text-sm font-semibold truncate"><%= user ? user.fullName : 'Staff' %></p>
        <p class="text-xs text-slate-500 truncate">Staff Member</p>
      </div>
      <form action="/logout" method="POST" class="inline">
        <button type="submit" class="p-1 hover:bg-slate-200 dark:hover:bg-slate-700 rounded" title="Logout">
          <span class="material-symbols-outlined text-slate-400">logout</span>
        </button>
      </form>
    </a>
  </div>
</aside>
