<%- include('../partials/managerSidebar', { activePage: 'inventory' }) %>

<main class="flex-1 ml-64">
  <!-- Top Bar -->
  <header class="h-16 border-b border-primary/10 bg-white dark:bg-slate-900 px-8 flex items-center justify-between sticky top-0 z-10">
    <div class="flex items-center gap-4 flex-1">
      <div class="relative w-full max-w-md">
        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 text-[20px]">search</span>
        <form action="/manager/inventory" method="GET" class="w-full">
          <input name="search" value="<%= filters.search || '' %>" class="w-full pl-10 pr-4 py-2 rounded-lg bg-slate-100 dark:bg-slate-800 border-none focus:ring-2 focus:ring-primary text-sm" placeholder="Search inventory..." type="text"/>
        </form>
      </div>
    </div>
    <div class="flex items-center gap-3">
      <% if (lowStockCount > 0) { %>
        <span class="px-3 py-1 bg-red-100 text-red-600 rounded-full text-xs font-bold">
          <%= lowStockCount %> Low Stock
        </span>
      <% } %>
      <button class="size-10 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 flex items-center justify-center text-slate-500">
        <span class="material-symbols-outlined">notifications</span>
      </button>
    </div>
  </header>
  <div class="p-8 space-y-8">
    <!-- Header Section -->
    <div class="flex flex-wrap items-center justify-between gap-4">
      <div>
        <h2 class="text-3xl font-black tracking-tight text-slate-900 dark:text-white">Inventory</h2>
        <p class="text-slate-500 mt-1">Manage stock levels and track inventory.</p>
      </div>
      <a href="/manager/inventory/new" class="bg-primary hover:bg-primary/90 text-white px-6 py-2.5 rounded-lg flex items-center gap-2 font-bold transition-all shadow-lg shadow-primary/20">
        <span class="material-symbols-outlined text-[20px]">add</span>
        <span>Add Item</span>
      </a>
    </div>

    <!-- Filters -->
    <form action="/manager/inventory" method="GET" class="bg-white dark:bg-slate-900 p-4 rounded-xl border border-slate-200 dark:border-slate-800 flex flex-wrap items-center gap-4">
      <% if (filters.search) { %>
        <input type="hidden" name="search" value="<%= filters.search %>"/>
      <% } %>
      <div class="flex flex-col gap-1">
        <label class="text-[10px] font-bold uppercase tracking-wider text-slate-500 px-1">Category</label>
        <select name="category" onchange="this.form.submit()" class="px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-sm">
          <option value="">All Categories</option>
          <% categories.forEach(function(cat) { %>
            <option value="<%= cat %>" <%= filters.category === cat ? 'selected' : '' %>><%= cat %></option>
          <% }); %>
        </select>
      </div>
      <div class="mt-5">
        <a href="/manager/inventory" class="px-4 py-2 text-sm text-slate-500 hover:text-slate-700">Clear Filters</a>
      </div>
    </form>

    <!-- Inventory List -->
    <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full text-left">
          <thead class="bg-slate-50 dark:bg-slate-800 text-slate-500 text-xs uppercase tracking-wider">
            <tr>
              <th class="px-6 py-4 font-bold">Item</th>
              <th class="px-6 py-4 font-bold">Category</th>
              <th class="px-6 py-4 font-bold">Quantity</th>
              <th class="px-6 py-4 font-bold">Reorder Level</th>
              <th class="px-6 py-4 font-bold">Status</th>
              <th class="px-6 py-4 font-bold text-right">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
            <% if (items && items.length > 0) { %>
              <% items.forEach(function(item) { %>
                <% var isLowStock = item.reorderLevel > 0 && item.quantityOnHand <= item.reorderLevel; %>
                <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="size-8 rounded bg-slate-200 flex items-center justify-center">
                        <span class="material-symbols-outlined text-slate-500 text-[18px]">inventory_2</span>
                      </div>
                      <div>
                        <p class="font-bold text-sm text-slate-900 dark:text-white"><%= item.name %></p>
                        <% if (item.unit) { %>
                          <p class="text-xs text-slate-500"><%= item.unit %></p>
                        <% } %>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-400">
                    <%= item.category || '-' %>
                  </td>
                  <td class="px-6 py-4 text-sm font-bold <%= isLowStock ? 'text-red-600' : 'text-slate-900 dark:text-white' %>">
                    <%= item.quantityOnHand %>
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-500">
                    <%= item.reorderLevel %>
                  </td>
                  <td class="px-6 py-4">
                    <% if (isLowStock) { %>
                      <span class="px-2 py-1 bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400 text-xs font-bold rounded-full">Low Stock</span>
                    <% } else { %>
                      <span class="px-2 py-1 bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400 text-xs font-bold rounded-full">In Stock</span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex items-center justify-end gap-2">
                      <a href="/manager/inventory/<%= item.id %>/edit" class="p-2 text-primary hover:bg-primary/5 rounded-lg transition-colors" title="Edit">
                        <span class="material-symbols-outlined text-[20px]">edit</span>
                      </a>
                      <form action="/manager/inventory/<%= item.id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <button type="submit" class="p-2 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors" title="Delete">
                          <span class="material-symbols-outlined text-[20px]">delete</span>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="6" class="px-6 py-8 text-center text-slate-500">
                  No inventory items found. Add some items to get started.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
</div>
