<div class="flex h-screen overflow-hidden">
  <%- include('../partials/staffSidebar', { activePage: 'activity' }) %>

  <!-- Main Content -->
  <main class="flex-1 overflow-y-auto">
    <!-- Header -->
    <header class="sticky top-0 z-10 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 px-8 py-4 flex items-center justify-between">
      <div class="flex items-center gap-4">
        <h2 class="text-xl font-bold">Activity</h2>
      </div>
      <div class="flex items-center gap-4">
        <button class="size-10 flex items-center justify-center rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300">
          <span class="material-symbols-outlined">notifications</span>
        </button>
      </div>
    </header>

    <div class="p-8 max-w-4xl mx-auto">
      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-black text-slate-900 dark:text-white">My Activity</h1>
        <p class="text-slate-500 mt-1">View your task completion history</p>
      </div>

      <!-- Activity List -->
      <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 overflow-hidden">
        <div class="p-6 border-b border-slate-200 dark:border-slate-800">
          <h3 class="font-bold text-lg">Recent Activity</h3>
        </div>
        <div class="divide-y divide-slate-100 dark:divide-slate-800">
          <% if (activities && activities.length > 0) { %>
            <% activities.forEach(function(activity) { %>
              <div class="p-4 px-6 flex items-center gap-4">
                <% if (activity.status === 'COMPLETED') { %>
                  <div class="size-10 rounded-full bg-emerald-100 dark:bg-emerald-900/30 text-emerald-600 flex items-center justify-center shrink-0">
                    <span class="material-symbols-outlined text-[20px]">check_circle</span>
                  </div>
                <% } else if (activity.status === 'IN_PROGRESS') { %>
                  <div class="size-10 rounded-full bg-primary/10 text-primary flex items-center justify-center shrink-0">
                    <span class="material-symbols-outlined text-[20px]">play_circle</span>
                  </div>
                <% } else if (activity.status === 'PARTIAL') { %>
                  <div class="size-10 rounded-full bg-amber-100 dark:bg-amber-900/30 text-amber-600 flex items-center justify-center shrink-0">
                    <span class="material-symbols-outlined text-[20px]">pending</span>
                  </div>
                <% } else { %>
                  <div class="size-10 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-400 flex items-center justify-center shrink-0">
                    <span class="material-symbols-outlined text-[20px]">circle</span>
                  </div>
                <% } %>
                <div class="flex-1">
                  <p class="font-medium text-slate-900 dark:text-white"><%= activity.ChecklistItem ? activity.ChecklistItem.text : 'Unknown task' %></p>
                  <p class="text-sm text-slate-500">
                    <% if (activity.completedAt) { %>
                      Completed <%= new Date(activity.completedAt).toLocaleString() %>
                    <% } else { %>
                      <%= activity.status %>
                    <% } %>
                  </p>
                </div>
                <span class="px-3 py-1 text-xs font-bold rounded-full
                  <% if (activity.status === 'COMPLETED') { %>bg-emerald-100 text-emerald-700<% }
                  else if (activity.status === 'IN_PROGRESS') { %>bg-primary/10 text-primary<% }
                  else if (activity.status === 'PARTIAL') { %>bg-amber-100 text-amber-700<% }
                  else { %>bg-slate-100 text-slate-500<% } %>">
                  <%= activity.status %>
                </span>
              </div>
            <% }); %>
          <% } else { %>
            <div class="p-8 text-center text-slate-500">
              <span class="material-symbols-outlined text-4xl text-slate-300 dark:text-slate-600 mb-4">history</span>
              <p>No activity yet. Complete some tasks to see your history here.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </main>
</div>
