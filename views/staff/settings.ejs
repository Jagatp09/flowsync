<div class="flex h-screen overflow-hidden">
  <%- include('../partials/staffSidebar', { activePage: 'settings' }) %>

  <!-- Main Content -->
  <main class="flex-1 overflow-y-auto">
    <!-- Header -->
    <header class="sticky top-0 z-10 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 px-8 py-4 flex items-center justify-between">
      <div class="flex items-center gap-4">
        <h2 class="text-xl font-bold">Settings</h2>
      </div>
      <div class="flex items-center gap-4">
        <button class="size-10 flex items-center justify-center rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300">
          <span class="material-symbols-outlined">notifications</span>
        </button>
      </div>
    </header>

    <div class="p-8 max-w-2xl mx-auto">
      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-black text-slate-900 dark:text-white">Settings</h1>
        <p class="text-slate-500 mt-1">Manage your account preferences</p>
      </div>

      <!-- Account Settings -->
      <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 p-6 shadow-sm mb-6">
        <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-4">Account Settings</h4>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Full Name</label>
            <input type="text" value="<%= user ? user.fullName : '' %>" class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white" disabled/>
            <p class="text-xs text-slate-500 mt-1">Contact your manager to change your name.</p>
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Email Address</label>
            <input type="email" value="<%= user ? user.email : '' %>" class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white" disabled/>
            <p class="text-xs text-slate-500 mt-1">Contact your manager to change your email.</p>
          </div>
        </div>
      </div>

      <!-- Preferences -->
      <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 p-6 shadow-sm mb-6">
        <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-4">Preferences</h4>
        <div class="space-y-4">
          <div class="flex items-center justify-between py-3 border-b border-slate-100 dark:border-slate-800">
            <div>
              <p class="font-medium text-slate-900 dark:text-white">Email Notifications</p>
              <p class="text-sm text-slate-500">Receive task reminders via email</p>
            </div>
            <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 text-slate-500 text-xs font-bold rounded-full">Coming Soon</span>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-slate-100 dark:border-slate-800">
            <div>
              <p class="font-medium text-slate-900 dark:text-white">Push Notifications</p>
              <p class="text-sm text-slate-500">Receive push notifications on your device</p>
            </div>
            <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 text-slate-500 text-xs font-bold rounded-full">Coming Soon</span>
          </div>
          <div class="flex items-center justify-between py-3">
            <div>
              <p class="font-medium text-slate-900 dark:text-white">Dark Mode</p>
              <p class="text-sm text-slate-500">Use dark theme</p>
            </div>
            <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 text-slate-500 text-xs font-bold rounded-full">Coming Soon</span>
          </div>
        </div>
      </div>

      <!-- App Info -->
      <div class="text-center text-sm text-slate-500">
        <p>FlowSync v1.0.0</p>
        <p class="mt-1">Built with Express + Sequelize + PostgreSQL</p>
      </div>
    </div>
  </main>
</div>
