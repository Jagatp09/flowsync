<div class="flex h-screen overflow-hidden">
  <%- include('../partials/staffSidebar', { activePage: 'tasks' }) %>

  <!-- Main Content -->
  <main class="flex-1 overflow-y-auto">
    <!-- Header -->
    <header class="sticky top-0 z-10 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 px-8 py-4 flex items-center justify-between">
      <div class="flex items-center gap-4 bg-slate-100 dark:bg-slate-800 px-4 py-2 rounded-xl w-96">
        <span class="material-symbols-outlined text-slate-400">search</span>
        <input class="bg-transparent border-none focus:ring-0 text-sm w-full" placeholder="Search tasks..." type="text"/>
      </div>
      <div class="flex items-center gap-4">
        <button class="size-10 flex items-center justify-center rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300">
          <span class="material-symbols-outlined">notifications</span>
        </button>
      </div>
    </header>

    <!-- Flash Messages -->
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="mx-8 mt-4 p-4 bg-emerald-50 dark:bg-emerald-900/20 border border-emerald-200 dark:border-emerald-800 rounded-lg flex items-center gap-3">
        <span class="material-symbols-outlined text-emerald-600 dark:text-emerald-400">check_circle</span>
        <p class="text-sm text-emerald-700 dark:text-emerald-300"><%= success %></p>
      </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="mx-8 mt-4 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg flex items-center gap-3">
        <span class="material-symbols-outlined text-red-600 dark:text-red-400">error</span>
        <p class="text-sm text-red-700 dark:text-red-300"><%= error %></p>
      </div>
    <% } %>

    <div class="p-8 max-w-4xl mx-auto space-y-8">
      <!-- Page Header & Progress Section -->
      <div class="flex flex-col gap-6">
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-4">
          <div>
            <nav aria-label="Breadcrumb" class="flex mb-2">
              <ol class="flex items-center space-x-2 text-xs text-slate-500 dark:text-slate-400">
                <li><span>FlowSync</span></li>
                <li><span class="material-symbols-outlined text-xs">chevron_right</span></li>
                <li class="font-semibold text-primary">My Tasks</li>
              </ol>
            </nav>
            <h1 class="text-3xl lg:text-4xl font-black text-slate-900 dark:text-slate-100 tracking-tight">My Tasks</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1"><%= new Date().toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' }) %></p>
          </div>
          <div class="bg-white dark:bg-slate-900 px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-800 shadow-sm flex items-center gap-3">
            <span class="material-symbols-outlined text-primary">task_alt</span>
            <span class="text-sm font-medium text-slate-700 dark:text-slate-300"><%= stats.completed %> / <%= stats.total %> completed</span>
          </div>
        </div>

        <!-- Progress Bar Card -->
        <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 p-6 shadow-sm">
          <div class="flex justify-between items-center mb-4">
            <div>
              <h3 class="text-lg font-bold text-slate-900 dark:text-slate-100">Overall Progress</h3>
              <p class="text-sm text-slate-500 dark:text-slate-400"><%= stats.completed %> of <%= stats.total %> tasks completed today</p>
            </div>
            <span class="text-2xl font-black text-primary"><%= stats.percentage %>%</span>
          </div>
          <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-full h-3 overflow-hidden">
            <div class="bg-primary h-full rounded-full transition-all duration-500" style="width: <%= stats.percentage %>%;"></div>
          </div>
        </div>
      </div>

      <!-- Tasks List by Shift -->
      <div class="flex flex-col gap-6">
        <% checklists.forEach(function(checklist) { %>
          <div class="flex flex-col gap-4">
            <div class="flex items-center justify-between">
              <h2 class="text-xl font-bold text-slate-900 dark:text-slate-100 flex items-center gap-2">
                <% if (checklist.shiftType === 'MORNING') { %>
                  <span class="material-symbols-outlined text-amber-500">wb_sunny</span>
                <% } else if (checklist.shiftType === 'MIDDAY') { %>
                  <span class="material-symbols-outlined text-blue-500">light_mode</span>
                <% } else if (checklist.shiftType === 'EVENING') { %>
                  <span class="material-symbols-outlined text-indigo-500">nights_stay</span>
                <% } else { %>
                  <span class="material-symbols-outlined text-slate-500">assignment</span>
                <% } %>
                <%= checklist.title %>
              </h2>
            </div>

            <!-- Task Cards -->
            <div class="grid gap-4">
              <% checklist.items.forEach(function(item) { %>
                <% var isCompleted = item.completion && item.completion.status === 'COMPLETED'; %>
                <% var isPartial = item.completion && item.completion.status === 'PARTIAL'; %>
                <% var isInProgress = item.completion && item.completion.status === 'IN_PROGRESS'; %>

                <div class="bg-white dark:bg-slate-900 rounded-xl border <%= isCompleted ? 'border-emerald-200 dark:border-emerald-800' : 'border-slate-200 dark:border-slate-800' %> p-5 flex flex-col sm:flex-row sm:items-center justify-between gap-4 group hover:border-primary/30 transition-all shadow-sm">
                  <div class="flex gap-4 items-start">
                    <% if (isCompleted) { %>
                      <div class="size-10 rounded-full bg-emerald-100 dark:bg-emerald-900/30 text-emerald-600 dark:text-emerald-400 flex items-center justify-center shrink-0">
                        <span class="material-symbols-outlined text-[20px]">check_circle</span>
                      </div>
                    <% } else if (isPartial) { %>
                      <div class="size-10 rounded-full bg-amber-100 dark:bg-amber-900/30 text-amber-600 dark:text-amber-400 flex items-center justify-center shrink-0">
                        <span class="material-symbols-outlined text-[20px]">pending</span>
                      </div>
                    <% } else if (isInProgress) { %>
                      <div class="size-10 rounded-full bg-primary/10 text-primary flex items-center justify-center shrink-0">
                        <span class="material-symbols-outlined text-[20px]">play_circle</span>
                      </div>
                    <% } else { %>
                      <div class="size-10 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-400 dark:text-slate-500 flex items-center justify-center shrink-0">
                        <span class="material-symbols-outlined text-[20px]">circle</span>
                      </div>
                    <% } %>
                    <div>
                      <h4 class="font-bold text-slate-900 dark:text-slate-100 <%= isCompleted ? 'line-through opacity-60' : '' %>"><%= item.text %></h4>
                      <% if (item.category) { %>
                        <p class="text-xs text-slate-500 dark:text-slate-400 mt-1"><%= item.category %></p>
                      <% } %>
                      <% if (item.completion && item.completion.completedAt) { %>
                        <p class="text-xs text-emerald-600 dark:text-emerald-400 mt-1">Completed at <%= new Date(item.completion.completedAt).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %></p>
                      <% } %>
                      <% if (item.completion && item.completion.notes) { %>
                        <p class="text-xs text-amber-600 dark:text-amber-400 mt-1 italic">Note: <%= item.completion.notes %></p>
                      <% } %>
                    </div>
                  </div>

                  <% if (isCompleted) { %>
                    <div class="flex flex-col items-end gap-2">
                      <span class="px-3 py-1 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400 text-xs font-bold rounded-full">Completed</span>
                      <form action="/checklists/items/<%= item.id %>/undo?_method=POST" method="POST" class="flex">
                        <button type="submit" class="px-3 py-1 text-xs font-bold rounded-md text-slate-500 hover:text-slate-700 dark:hover:text-slate-200">
                          Undo
                        </button>
                      </form>
                    </div>
                  <% } else { %>
                    <div class="flex flex-col items-end gap-2">
                      <% if (isPartial) { %>
                        <span class="px-3 py-1 bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400 text-xs font-bold rounded-full">Partial</span>
                      <% } else if (isInProgress) { %>
                        <span class="px-3 py-1 bg-primary/10 text-primary text-xs font-bold rounded-full">In Progress</span>
                      <% } else { %>
                        <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 text-slate-500 text-xs font-bold rounded-full">Pending</span>
                      <% } %>
                      <button onclick="openStatusModal('<%= item.id %>', '<%= item.text.replace(/'/g, "\\'") %>', '<%= item.completion ? item.completion.status : 'PENDING' %>', '<%= item.completion ? (item.completion.notes || '').replace(/'/g, "\\'") : '' %>')" class="px-3 py-1 text-xs font-bold rounded-md text-primary hover:text-primary/70 bg-slate-50 dark:bg-slate-800 px-3 py-1 rounded-lg">
                        Update
                      </button>
                    </div>
                  <% } %>
                </div>
              <% }); %>
            </div>
          </div>
        <% }); %>

        <% if (checklists.length === 0) { %>
          <div class="bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 p-12 text-center">
            <span class="material-symbols-outlined text-4xl text-slate-300 dark:text-slate-600 mb-4">assignment</span>
            <p class="text-slate-500">No tasks assigned yet.</p>
          </div>
        <% } %>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-4 justify-end">
        <button onclick="document.getElementById('customTaskModal').showModal()" class="flex items-center gap-2 px-4 py-2 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors">
          <span class="material-symbols-outlined text-[20px]">add</span>
          Add Custom Task
        </button>
        <button onclick="document.getElementById('shiftReportModal').showModal()" class="flex items-center gap-2 px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">
          <span class="material-symbols-outlined text-[20px]">send</span>
          Submit Shift Report
        </button>
      </div>
    </div>
  </main>
</div>

<script>
function openStatusModal(itemId, itemText, currentStatus, currentNotes) {
  document.getElementById('statusItemId').value = itemId;
  document.getElementById('statusItemText').textContent = itemText;
  document.getElementById('statusNotes').value = currentNotes;
  document.getElementById('statusSelect').value = currentStatus || 'PENDING';
  document.getElementById('statusForm').action = '/checklists/items/' + itemId + '/complete?_method=POST';
  document.getElementById('statusModal').showModal();
}
</script>

<!-- Status Update Modal -->
<dialog id="statusModal" class="modal p-6 rounded-xl border border-slate-200 dark:border-slate-700 backdrop:bg-slate-900/50 w-full max-w-md">
  <form action="/checklists/items/:itemId/complete?_method=POST" method="POST" id="statusForm">
    <input type="hidden" name="itemId" id="statusItemId" value=""/>
    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-bold text-slate-900 dark:text-white">Update Task Status</h3>
        <button type="button" onclick="document.getElementById('statusModal').close()" class="p-1 hover:bg-slate-100 dark:hover:bg-slate-800 rounded">
          <span class="material-symbols-outlined text-slate-500">close</span>
        </button>
      </div>
      <div>
        <p class="text-sm text-slate-600 dark:text-slate-400 mb-2">Task: <span id="statusItemText" class="font-semibold text-slate-900 dark:text-white"></span></p>
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Status</label>
        <select name="status" id="statusSelect" class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white">
          <option value="PENDING">Pending</option>
          <option value="IN_PROGRESS">In Progress</option>
          <option value="PARTIAL">Partial</option>
          <option value="COMPLETED">Completed</option>
        </select>
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Notes (optional)</label>
        <textarea name="notes" id="statusNotes" rows="2" placeholder="Add notes about this task..." class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white"></textarea>
      </div>
    </div>
    <div class="flex gap-3 mt-6">
      <button type="button" onclick="document.getElementById('statusModal').close()" class="flex-1 px-4 py-2 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors">Cancel</button>
      <button type="submit" class="flex-1 px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">Update Status</button>
    </div>
  </form>
</dialog>

<!-- Custom Task Modal -->
<dialog id="customTaskModal" class="modal p-6 rounded-xl border border-slate-200 dark:border-slate-700 backdrop:bg-slate-900/50 w-full max-w-md">
  <div class="space-y-4">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-bold text-slate-900 dark:text-white">Add Custom Task</h3>
      <button onclick="document.getElementById('customTaskModal').close()" class="p-1 hover:bg-slate-100 dark:hover:bg-slate-800 rounded">
        <span class="material-symbols-outlined text-slate-500">close</span>
      </button>
    </div>
    <form id="customTaskForm" action="/checklists/shift/MORNING/items" method="POST">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Task Description</label>
          <input type="text" name="text" required placeholder="Enter task description" class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white"/>
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Category</label>
          <select name="category" class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white">
            <option value="Custom">Custom</option>
            <option value="Operations">Operations</option>
            <option value="Maintenance">Maintenance</option>
            <option value="Inventory">Inventory</option>
            <option value="Management">Management</option>
            <option value="Security">Security</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Shift</label>
          <select name="shiftType" id="customTaskShift" onchange="this.form.action='/checklists/shift/'+this.value+'/items'" class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white">
            <option value="MORNING">Morning</option>
            <option value="MIDDAY">Midday</option>
            <option value="EVENING">Evening</option>
          </select>
        </div>
      </div>
      <div class="flex gap-3 mt-6">
        <button type="button" onclick="document.getElementById('customTaskModal').close()" class="flex-1 px-4 py-2 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors">Cancel</button>
        <button type="submit" class="flex-1 px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">Add Task</button>
      </div>
    </form>
  </div>
</dialog>

<!-- Shift Report Modal -->
<dialog id="shiftReportModal" class="modal p-6 rounded-xl border border-slate-200 dark:border-slate-700 backdrop:bg-slate-900/50 w-full max-w-md">
  <div class="space-y-4">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-bold text-slate-900 dark:text-white">Submit Shift Report</h3>
      <button onclick="document.getElementById('shiftReportModal').close()" class="p-1 hover:bg-slate-100 dark:hover:bg-slate-800 rounded">
        <span class="material-symbols-outlined text-slate-500">close</span>
      </button>
    </div>
    <form action="/checklists/shift/MORNING/submit" method="POST">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Shift</label>
          <select name="shiftType" class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white">
            <option value="MORNING">Morning</option>
            <option value="MIDDAY">Midday</option>
            <option value="EVENING">Evening</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Shift Summary</label>
          <textarea name="summary" rows="3" placeholder="Describe what was accomplished during your shift" class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white"></textarea>
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Issues / Notes</label>
          <textarea name="issues" rows="2" placeholder="Any issues or notes to report" class="w-full px-4 py-2 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800 text-slate-900 dark:text-white"></textarea>
        </div>
      </div>
      <div class="flex gap-3 mt-6">
        <button type="button" onclick="document.getElementById('shiftReportModal').close()" class="flex-1 px-4 py-2 bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors">Cancel</button>
        <button type="submit" class="flex-1 px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">Submit Report</button>
      </div>
    </form>
  </div>
</dialog>
